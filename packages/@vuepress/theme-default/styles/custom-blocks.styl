.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem

  &.tip, &.warning, &.danger
    padding 0.1rem 1.5rem
    border-left-width 0.5rem
    border-left-style solid
    margin 1rem 0

  &.tip
    border-color #42b983

  &.warning
    border-color darken(#ffe564, 35%)

  &.danger
    border-color darken(red, 20%)

  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em

    h4
      margin-top 0

    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0

    summary
      outline none
      cursor pointer

@require './custom-blocks-light'
@require './custom-blocks-dark'
