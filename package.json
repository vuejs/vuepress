{
  "name": "vuepress",
  "version": "0.8.4",
  "description": "Minimalistic doc generator with Vue component based layout system",
  "main": "lib/index.js",
  "bin": {
    "vuepress": "bin/vuepress.js"
  },
  "scripts": {
    "dev": "node bin/vuepress dev docs",
    "build": "node bin/vuepress build docs",
